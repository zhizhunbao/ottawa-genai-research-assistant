# ───────────────────────────────────────────────────────────────────────────────
# {{PROJECT_NAME}} — Environment Configuration
# ───────────────────────────────────────────────────────────────────────────────
#
# @module devops/.env.example
# @source full-stack-fastapi-template/copier.yml (101L)
# @source cookiecutter-django/hooks/post_gen_project.py (366-388L)
# @reference https://github.com/fastapi/full-stack-fastapi-template
# @reference https://github.com/cookiecutter/cookiecutter-django
# @template S7-M1-F3
#
# Copy this file to .env and fill in the values.
#   cp .env.example .env
#
# SECURITY WARNING: Never commit .env to version control!
# Add .env to your .gitignore file.
#
# Values marked with 'changethis' MUST be updated before deployment.
# Generate secure keys with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# ───────────────────────────────────────────────────────────────────────────────

# ─── General ─────────────────────────────────────────────────────────────────

# Project display name (shown in API docs, email subjects)
PROJECT_NAME="My Awesome Project"

# Docker Compose stack name (no spaces, lowercase)
STACK_NAME=my-awesome-project

# Environment: local | staging | production
ENVIRONMENT=local

# Debug mode (set to false in production!)
DEBUG=true

# Application domain (used for CORS, email links)
DOMAIN=localhost

# Frontend URL
FRONTEND_HOST=http://localhost:5173

# ─── Security ────────────────────────────────────────────────────────────────
# @source full-stack-fastapi-template/copier.yml (11-17L)

# Secret key for JWT tokens and session encryption
# MUST change in production! Generate with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changethis

# CORS allowed origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173,http://localhost:3000

# ─── Database ────────────────────────────────────────────────────────────────
# @source cookiecutter-django/hooks/post_gen_project.py (330-342L, 366-378L)

# PostgreSQL connection
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=changethis

# Full database URL (alternative to individual params)
# DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# SQLite fallback (for development without PostgreSQL)
# DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# ─── Redis ───────────────────────────────────────────────────────────────────

# Redis connection (for caching, Celery broker, rate limiting)
# REDIS_URL=redis://localhost:6379/0

# ─── Auth ────────────────────────────────────────────────────────────────────
# @source full-stack-fastapi-template/copier.yml (19-27L)

# First superuser (created on first startup)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth2 providers (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ─── Email / SMTP ───────────────────────────────────────────────────────────
# @source full-stack-fastapi-template/copier.yml (29-47L)

SMTP_TLS=true
SMTP_SSL=false
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
EMAILS_FROM_NAME="${PROJECT_NAME}"

# ─── AI / LLM ───────────────────────────────────────────────────────────────

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=
# AZURE_OPENAI_DEPLOYMENT=gpt-4o
# AZURE_OPENAI_API_VERSION=2024-02-01

# Ollama (local models)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ─── Vector Store ────────────────────────────────────────────────────────────

# Qdrant
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=
# QDRANT_COLLECTION_NAME=documents

# ChromaDB
# CHROMA_HOST=localhost
# CHROMA_PORT=8000

