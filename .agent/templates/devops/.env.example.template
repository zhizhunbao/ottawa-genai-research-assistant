# ─── Monitoring & Logging ───────────────────────────────────────────────────
# @source full-stack-fastapi-template/copier.yml (57-60L)

# Sentry (error tracking)
SENTRY_DSN=

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

