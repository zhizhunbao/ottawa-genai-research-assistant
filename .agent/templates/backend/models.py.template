from datetime import datetime
from typing import Optional
import uuid

from sqlalchemy import Column, String, Text, DateTime, Boolean, ForeignKey, Index
from sqlalchemy.orm import relationship, Mapped, mapped_column
from sqlalchemy.dialects.postgresql import UUID

from app.core.database import Base


class {{FeatureName}}(Base):
    """{{FeatureName}} 数据库模型"""

    __tablename__ = "{{feature_name}}"

    # Primary Key
    id: Mapped[uuid.UUID] = mapped_column(
        UUID(as_uuid=True),
        primary_key=True,
        default=uuid.uuid4,
    )

    # Fields
    name: Mapped[str] = mapped_column(
        String(255),
        nullable=False,
        index=True,
    )
    description: Mapped[Optional[str]] = mapped_column(
        Text,
        nullable=True,
    )
    is_active: Mapped[bool] = mapped_column(
        Boolean,
        default=True,
        nullable=False,
    )

    # Foreign Keys (示例)
    # user_id: Mapped[uuid.UUID] = mapped_column(
    #     UUID(as_uuid=True),
    #     ForeignKey("users.id", ondelete="CASCADE"),
    #     nullable=False,
    # )

    # Timestamps
    created_at: Mapped[datetime] = mapped_column(
        DateTime,
        default=datetime.utcnow,
        nullable=False,
    )
    updated_at: Mapped[datetime] = mapped_column(
        DateTime,
        default=datetime.utcnow,
        onupdate=datetime.utcnow,
        nullable=False,
    )

    # Soft delete
    deleted_at: Mapped[Optional[datetime]] = mapped_column(
        DateTime,
        nullable=True,
    )

    # Relationships (示例)
    # user: Mapped["User"] = relationship(
    #     "User",
    #     back_populates="{{feature_name}}s",
    # )

    # Indexes
    __table_args__ = (
        Index("ix_{{feature_name}}_created_at", "created_at"),
        Index("ix_{{feature_name}}_is_active", "is_active"),
    )

    def __repr__(self) -> str:
        return f"<{{FeatureName}}(id={self.id}, name={self.name})>"

    @property
    def is_deleted(self) -> bool:
        """检查是否已软删除"""
        return self.deleted_at is not None

    def soft_delete(self) -> None:
        """软删除"""
        self.deleted_at = datetime.utcnow()
        self.is_active = False

    def restore(self) -> None:
        """恢复软删除"""
        self.deleted_at = None
        self.is_active = True
