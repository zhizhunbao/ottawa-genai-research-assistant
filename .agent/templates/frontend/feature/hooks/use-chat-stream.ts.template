import { useState, useCallback } from 'react';
import { ChatStreamOptions, Message, AgentStep } from '../types';

export const useChatStream = (baseUrl: string) => {
  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState<Error | null>(null);

  const sendMessage = useCallback(async (
    query: string, 
    options: ChatStreamOptions,
    context?: Record<string, any>
  ) => {
    setIsLoading(true);
    setError(null);

    try {
      const response = await fetch(`${baseUrl}/chat/stream`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('token')}`,
        },
        body: JSON.stringify({
          query,
          ...context
        }),
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const reader = response.body?.getReader();
      if (!reader) throw new Error('No reader available');

      const decoder = new TextDecoder();
      let buffer = '';

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;

        buffer += decoder.decode(value, { stream: true });
        
        // 处理 NDJSON (每个 JSON 行以 \n 结尾)
        const lines = buffer.split('\n');
        buffer = lines.pop() || ''; // 最后一个可能是不完整行

        for (const line of lines) {
          if (!line.trim()) continue;
          try {
            const data = JSON.parse(line);
            
            // 根据后端定义的协议分发事件
            if (data.type === 'content') {
              options.onMessage?.(data.payload);
            } else if (data.type === 'thought') {
              options.onThought?.(data.payload);
            } else if (data.type === 'step') {
              options.onStep?.(data.payload as AgentStep);
            } else if (data.error) {
              throw new Error(data.error);
            }
          } catch (e) {
            console.error('Failed to parse stream line:', e);
          }
        }
      }
      
      options.onDone?.();
    } catch (err: any) {
      setError(err);
      options.onError?.(err);
    } finally {
      setIsLoading(false);
    }
  }, [baseUrl]);

  return { sendMessage, isLoading, error };
};
