/**
 * Layout Component
 *
 * 页面布局：Header + Sidebar + Content
 */

import { useState } from 'react';

interface LayoutProps {
  children: React.ReactNode;
  header?: React.ReactNode;
  sidebar?: React.ReactNode;
  sidebarWidth?: string;
  collapsible?: boolean;
}

export function Layout({
  children,
  header,
  sidebar,
  sidebarWidth = '16rem',
  collapsible = true,
}: LayoutProps) {
  const [collapsed, setCollapsed] = useState(false);

  return (
    <div className="min-h-screen flex flex-col">
      {/* Header */}
      {header && (
        <header className="h-14 border-b bg-background flex items-center px-4 sticky top-0 z-40">
          {collapsible && sidebar && (
            <button
              onClick={() => setCollapsed(!collapsed)}
              className="mr-4 p-2 hover:bg-muted rounded"
            >
              {/* TODO: Menu icon */}
              ☰
            </button>
          )}
          {header}
        </header>
      )}

      <div className="flex flex-1">
        {/* Sidebar */}
        {sidebar && (
          <aside
            className={`
              border-r bg-muted/30 transition-all duration-200
              ${collapsed ? 'w-0 overflow-hidden' : ''}
            `}
            style={{ width: collapsed ? 0 : sidebarWidth }}
          >
            <div className="p-4">{sidebar}</div>
          </aside>
        )}

        {/* Main Content */}
        <main className="flex-1 overflow-auto">
          {children}
        </main>
      </div>
    </div>
  );
}
