/**
 * ConversationList - Chat history sidebar with search, delete, and new chat
 *
 * Displays a searchable, scrollable list of past conversations as cards.
 * Each card shows title, message count, last message preview, and creation date.
 * Includes delete with confirmation and "Start New Chat" button.
 *
 * @module features/chat/api
 * @source rag-web-ui/frontend/src/app/dashboard/chat/page.tsx (full 181-line ChatPage component)
 * @reference https://github.com/xyb/rag-web-ui
 * @template S1-M3-2 frontend/features/chat/api/conversation-list.tsx
 */

import React, { useEffect, useState, useCallback, useMemo } from 'react'
import {
  Plus,
  MessageSquare,
  Trash2,
  Search,
  Loader2,
} from 'lucide-react'
import { Button } from '{{ALIAS}}/shared/components/ui/button'
import { Input } from '{{ALIAS}}/shared/components/ui/input'
import { Badge } from '{{ALIAS}}/shared/components/ui/badge'
import { cn } from '{{ALIAS}}/shared/lib/utils'

// ============================================================
// Types
// ============================================================

interface Conversation {
  id: number | string
  title: string
  created_at: string
  messages: Array<{
    id: number
    content: string
    role: string
    created_at: string
  }>
  knowledge_base_ids?: number[]
}

interface ConversationListProps {
  /** Currently selected conversation ID */
  activeId?: number | string

  /** Callback when a conversation is selected */
  onSelect?: (id: number | string) => void

  /** Callback when "New Chat" is clicked */
  onNewChat?: () => void

  /** API fetch function (for loading conversations) */
  fetchConversations?: () => Promise<Conversation[]>

  /** API delete function */
  deleteConversation?: (id: number | string) => Promise<void>

  /** Optional className */
  className?: string
}

// ============================================================
// Helpers
// ============================================================

/**
 * Extract display preview from message content.
 * Removes __LLM_RESPONSE__ markers from rag-web-ui format.
 *
 * @source rag-web-ui chat/page.tsx lines 133-141
 */
function getMessagePreview(content: string, maxLength = 100): string {
  let text = content
  if (text.includes('__LLM_RESPONSE__')) {
    text = text.split('__LLM_RESPONSE__').pop() || ''
  }
  text = text.replace(/\[citation:\d+\]/gi, '').trim()
  return text.length > maxLength ? text.slice(0, maxLength) + '...' : text
}

/** Format date for display */
function formatDate(dateStr: string): string {
  const date = new Date(dateStr)
  const now = new Date()
  const diffMs = now.getTime() - date.getTime()
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24))

  if (diffDays === 0) return 'Today'
  if (diffDays === 1) return 'Yesterday'
  if (diffDays < 7) return `${diffDays}d ago`
  return date.toLocaleDateString()
}

// ============================================================
// Main Component
// ============================================================

/**
 * Conversation list with search and management.
 *
 * @source rag-web-ui chat/page.tsx — full ChatPage component
 */
export function ConversationList({
  activeId,
  onSelect,
  onNewChat,
  fetchConversations,
  deleteConversation,
  className,
}: ConversationListProps) {
  const [conversations, setConversations] = useState<Conversation[]>([])
  const [loading, setLoading] = useState(true)
  const [searchTerm, setSearchTerm] = useState('')
  const [deletingId, setDeletingId] = useState<number | string | null>(null)

  // Load conversations
  useEffect(() => {
    if (!fetchConversations) {
      setLoading(false)
      return
    }

    const load = async () => {
      try {
        const data = await fetchConversations()
        setConversations(data)
      } catch (err) {
        console.error('Failed to fetch conversations:', err)
      } finally {
        setLoading(false)
      }
    }

    load()
  }, [fetchConversations])

  // Filter by search
  const filteredConversations = useMemo(() => {
    if (!searchTerm.trim()) return conversations
    const term = searchTerm.toLowerCase()
    return conversations.filter((c) =>
      c.title.toLowerCase().includes(term)
    )
  }, [conversations, searchTerm])

  // Handle delete
  const handleDelete = useCallback(
    async (id: number | string, e: React.MouseEvent) => {
      e.stopPropagation()
      if (!deleteConversation) return
      if (!confirm('Are you sure you want to delete this conversation?')) return

      setDeletingId(id)
      try {
        await deleteConversation(id)
        setConversations((prev) => prev.filter((c) => c.id !== id))
      } catch (err) {
        console.error('Failed to delete conversation:', err)
      } finally {
        setDeletingId(null)
      }
    },
    [deleteConversation]
  )

  // --------------------------------------------------------
  // Render
  // --------------------------------------------------------

  return (
    <div className={cn('flex flex-col h-full', className)}>
      {/* Header */}
      <div className="p-4 space-y-3 border-b">
        <div className="flex items-center justify-between">
          <h2 className="text-lg font-semibold">Conversations</h2>
          <Button size="sm" onClick={onNewChat}>
            <Plus className="h-4 w-4 mr-1" />
            New
          </Button>
        </div>

        {/* Search */}
        <div className="relative">
          <Search className="absolute left-2.5 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" />
          <Input
            type="text"
            placeholder="Search conversations..."
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
            className="pl-8 h-9"
          />
        </div>
      </div>

      {/* Conversation List */}
      <div className="flex-1 overflow-y-auto">
        {loading && (
          <div className="flex justify-center py-8">
            <Loader2 className="h-6 w-6 animate-spin text-muted-foreground" />
          </div>
        )}

        {!loading && filteredConversations.length === 0 && (
          <div className="text-center py-12 px-4">
            <MessageSquare className="mx-auto h-10 w-10 text-muted-foreground/30" />
            <p className="mt-3 text-sm text-muted-foreground">
              {searchTerm ? 'No matching conversations' : 'No conversations yet'}
            </p>
            {!searchTerm && (
              <Button
                variant="outline"
                size="sm"
                className="mt-4"
                onClick={onNewChat}
              >
                <Plus className="h-4 w-4 mr-1" />
                Start Your First Chat
              </Button>
            )}
          </div>
        )}

        {filteredConversations.map((conv) => {
          const lastMessage =
            conv.messages.length > 0
              ? conv.messages[conv.messages.length - 1]
              : null

          return (
            <div
              key={conv.id}
              onClick={() => onSelect?.(conv.id)}
              className={cn(
                'group relative px-4 py-3 border-b cursor-pointer transition-colors',
                'hover:bg-muted/50',
                activeId === conv.id && 'bg-muted border-l-2 border-l-primary'
              )}
            >
              {/* Title row */}
              <div className="flex items-start gap-3">
                <div
                  className={cn(
                    'shrink-0 rounded-lg p-1.5',
                    activeId === conv.id ? 'bg-primary/10' : 'bg-muted'
                  )}
                >
                  <MessageSquare
                    className={cn(
                      'h-4 w-4',
                      activeId === conv.id
                        ? 'text-primary'
                        : 'text-muted-foreground'
                    )}
                  />
                </div>
                <div className="flex-1 min-w-0">
                  <p className="text-sm font-medium truncate group-hover:text-primary transition-colors">
                    {conv.title}
                  </p>
                  <div className="flex items-center gap-2 mt-0.5">
                    <span className="text-xs text-muted-foreground">
                      {conv.messages.length} msgs
                    </span>
                    <span className="text-xs text-muted-foreground">•</span>
                    <span className="text-xs text-muted-foreground">
                      {formatDate(conv.created_at)}
                    </span>
                  </div>
                </div>

                {/* Delete button */}
                {deleteConversation && (
                  <button
                    onClick={(e) => handleDelete(conv.id, e)}
                    disabled={deletingId === conv.id}
                    className="opacity-0 group-hover:opacity-100 p-1 rounded hover:bg-destructive/10 transition-opacity"
                  >
                    {deletingId === conv.id ? (
                      <Loader2 className="h-3.5 w-3.5 animate-spin" />
                    ) : (
                      <Trash2 className="h-3.5 w-3.5 text-muted-foreground hover:text-destructive" />
                    )}
                  </button>
                )}
              </div>

              {/* Last message preview */}
              {lastMessage && (
                <p className="text-xs text-muted-foreground mt-1.5 line-clamp-2 pl-[34px]">
                  {getMessagePreview(lastMessage.content)}
                </p>
              )}
            </div>
          )
        })}
      </div>
    </div>
  )
}

export default ConversationList
