/**
 * ModelSelect - AI model selector dropdown with provider grouping
 *
 * A dropdown/select component that lists available AI models grouped by provider.
 * Shows model capabilities (vision, function calling, context window) as badges.
 * Commonly placed in the chat header or settings panel.
 *
 * @module features/chat/components
 * @source lobe-chat/src/components/ModelSelect/index.tsx (361 lines — full tagged UI)
 * @source lobe-chat/src/features/ModelSelect/ (provider grouping + model card rendering)
 * @reference https://github.com/lobehub/lobe-chat
 * @template S1-M5-4 frontend/features/chat/components/model-select.tsx
 */

'use client'

import { memo, useState, useRef, useEffect, type CSSProperties } from 'react'
import { ChevronDown, Check, Zap, Eye, Wrench, Paperclip } from 'lucide-react'

// ============================================================
// Types
// ============================================================

export interface ModelOption {
  /** Model ID (e.g., "gpt-4o") */
  id: string
  /** Display name (e.g., "GPT-4o") */
  label: string
  /** Provider ID (e.g., "openai") */
  provider: string
  /** Provider display name */
  providerLabel?: string
  /** Context window tokens */
  contextWindow?: number
  /** Model abilities */
  abilities?: {
    vision?: boolean
    functionCall?: boolean
    fileUpload?: boolean
  }
  /** Whether this is a new model */
  isNew?: boolean
}

export interface ModelSelectProps {
  /** Available models grouped by provider */
  models: ModelOption[]
  /** Currently selected model ID */
  value: string
  /** Selection change handler */
  onChange: (modelId: string) => void
  /** Additional CSS class */
  className?: string
  /** Compact mode (shows only icon + model name) */
  compact?: boolean
  /** Disabled state */
  disabled?: boolean
}

// ============================================================
// Model Capability Badges
// ============================================================

/**
 * Feature capability badges for a model.
 *
 * @source lobe-chat ModelSelect/index.tsx lines 96-158 — FeatureTags
 */
function ModelBadges({ model }: { model: ModelOption }) {
  const badges: Array<{
    icon: typeof Eye
    color: string
    label: string
    enabled: boolean
  }> = [
    {
      icon: Eye,
      color: '#f59e0b',
      label: 'Vision',
      enabled: !!model.abilities?.vision,
    },
    {
      icon: Wrench,
      color: '#3b82f6',
      label: 'Function Call',
      enabled: !!model.abilities?.functionCall,
    },
    {
      icon: Paperclip,
      color: '#10b981',
      label: 'File Upload',
      enabled: !!model.abilities?.fileUpload,
    },
  ]

  const activeBadges = badges.filter((b) => b.enabled)
  if (activeBadges.length === 0 && !model.contextWindow) return null

  return (
    <div style={{ display: 'flex', alignItems: 'center', gap: 4, marginLeft: 'auto' }}>
      {activeBadges.map(({ icon: Icon, color, label }) => (
        <span
          key={label}
          title={label}
          style={{
            width: 20,
            height: 20,
            borderRadius: 4,
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            background: `${color}14`,
            color,
          }}
        >
          <Icon size={12} />
        </span>
      ))}

      {model.contextWindow != null && model.contextWindow > 0 && (
        <span
          title={`${model.contextWindow.toLocaleString()} tokens`}
          style={{
            height: 20,
            padding: '0 6px',
            borderRadius: 4,
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            background: 'var(--color-fill-tertiary, #f1f5f9)',
            color: 'var(--color-text-secondary, #64748b)',
            fontSize: 10,
            fontFamily: 'monospace',
            fontWeight: 500,
          }}
        >
          {formatTokenCount(model.contextWindow)}
        </span>
      )}

      {model.isNew && (
        <span
          style={{
            height: 18,
            padding: '0 6px',
            borderRadius: 4,
            background: 'var(--color-primary, #6366f1)',
            color: '#fff',
            fontSize: 9,
            fontWeight: 700,
            display: 'flex',
            alignItems: 'center',
            textTransform: 'uppercase',
            letterSpacing: 0.5,
          }}
        >
          New
        </span>
      )}
    </div>
  )
}

