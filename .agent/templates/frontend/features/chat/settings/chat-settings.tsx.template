/**
 * Chat Settings Panel - Model, temperature, system prompt, context length
 *
 * @module frontend/features/chat/settings/chat-settings
 * @source open-webui/src/lib/components/chat/Settings/General.svelte → TSX
 * @source open-webui/src/lib/components/chat/Settings/Advanced.svelte → TSX
 * @reference https://github.com/open-webui/open-webui
 * @template S1-M8-F1
 *
 * Chat settings panel for per-conversation configuration:
 * 1. Model selection dropdown
 * 2. System prompt textarea
 * 3. Temperature / Top-P / Max Tokens sliders
 * 4. Context length control
 * 5. Response format (text/json)
 * 6. Seed for reproducibility
 *
 * Pattern: slide-over or collapsible sidebar panel
 */

import React, { useState, useCallback, type FC } from "react";

// ─── Types ──────────────────────────────────────────────────────────────────

export interface ChatSettings {
  model: string;
  systemPrompt: string;
  temperature: number;
  topP: number;
  maxTokens: number;
  contextLength: number;
  frequencyPenalty: number;
  presencePenalty: number;
  responseFormat: "text" | "json_object";
  seed: number | null;
  stream: boolean;
}

export const DEFAULT_CHAT_SETTINGS: ChatSettings = {
  model: "gpt-4o-mini",
  systemPrompt: "You are a helpful assistant.",
  temperature: 0.7,
  topP: 1.0,
  maxTokens: 4096,
  contextLength: 16384,
  frequencyPenalty: 0.0,
  presencePenalty: 0.0,
  responseFormat: "text",
  seed: null,
  stream: true,
};

export interface ModelOption {
  id: string;
  name: string;
  provider?: string;
  contextWindow?: number;
}

export interface ChatSettingsProps {
  settings: ChatSettings;
  onChange: (settings: ChatSettings) => void;
  models: ModelOption[];
  className?: string;
}

