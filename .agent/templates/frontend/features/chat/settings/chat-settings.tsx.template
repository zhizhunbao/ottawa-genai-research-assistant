// ─── Slider Field Component ─────────────────────────────────────────────────

interface SliderFieldProps {
  label: string;
  value: number;
  min: number;
  max: number;
  step: number;
  onChange: (v: number) => void;
}

const SliderField: FC<SliderFieldProps> = ({
  label,
  value,
  min,
  max,
  step,
  onChange,
}) => (
  <div style={s.field}>
    <div style={s.label}>
      <span>{label}</span>
      <span style={s.labelValue}>{value}</span>
    </div>
    <input
      type="range"
      min={min}
      max={max}
      step={step}
      value={value}
      onChange={(e) => onChange(parseFloat(e.target.value))}
      style={s.slider}
    />
  </div>
);

// ─── Chat Settings Panel ────────────────────────────────────────────────────
// @source open-webui/src/lib/components/chat/Settings/General.svelte → TSX
// @source open-webui/src/lib/components/chat/Settings/Advanced.svelte → TSX

export function ChatSettingsPanel({
  settings,
  onChange,
  models,
  className,
}: ChatSettingsProps) {
  const update = useCallback(
    <K extends keyof ChatSettings>(key: K, value: ChatSettings[K]) => {
      onChange({ ...settings, [key]: value });
    },
    [settings, onChange]
  );

  return (
    <div style={s.panel} className={className}>
      <h3 style={s.title}>Chat Settings</h3>

      {/* Model Selection */}
      <div style={s.field}>
        <label style={s.label}>Model</label>
        <select
          style={s.select}
          value={settings.model}
          onChange={(e) => update("model", e.target.value)}
        >
          {models.map((m) => (
            <option key={m.id} value={m.id}>
              {m.name} {m.provider ? `(${m.provider})` : ""}
            </option>
          ))}
        </select>
      </div>

      {/* System Prompt */}
      <div style={s.field}>
        <label style={s.label}>System Prompt</label>
        <textarea
          style={s.textarea}
          value={settings.systemPrompt}
          onChange={(e) => update("systemPrompt", e.target.value)}
          placeholder="You are a helpful assistant..."
        />
      </div>

      <div style={s.divider} />

      {/* Parameters */}
      <div style={s.section}>
        <h4 style={s.sectionTitle}>Parameters</h4>

        <SliderField
          label="Temperature"
          value={settings.temperature}
          min={0}
          max={2}
          step={0.1}
          onChange={(v) => update("temperature", v)}
        />

        <SliderField
          label="Top P"
          value={settings.topP}
          min={0}
          max={1}
          step={0.05}
          onChange={(v) => update("topP", v)}
        />

        <SliderField
          label="Max Tokens"
          value={settings.maxTokens}
          min={256}
          max={32768}
          step={256}
          onChange={(v) => update("maxTokens", v)}
        />

        <SliderField
          label="Context Length"
          value={settings.contextLength}
          min={1024}
          max={131072}
          step={1024}
          onChange={(v) => update("contextLength", v)}
        />
      </div>

      <div style={s.divider} />

      {/* Advanced */}
      <div style={s.section}>
        <h4 style={s.sectionTitle}>Advanced</h4>

        <SliderField
          label="Frequency Penalty"
          value={settings.frequencyPenalty}
          min={-2}
          max={2}
          step={0.1}
          onChange={(v) => update("frequencyPenalty", v)}
        />

        <SliderField
          label="Presence Penalty"
          value={settings.presencePenalty}
          min={-2}
          max={2}
          step={0.1}
          onChange={(v) => update("presencePenalty", v)}
        />

        {/* Response Format */}
        <div style={s.field}>
          <label style={s.label}>Response Format</label>
          <select
            style={s.select}
            value={settings.responseFormat}
            onChange={(e) =>
              update("responseFormat", e.target.value as "text" | "json_object")
            }
          >
            <option value="text">Text</option>
            <option value="json_object">JSON Object</option>
          </select>
        </div>

        {/* Seed */}
        <div style={s.field}>
          <label style={s.label}>Seed (optional)</label>
          <input
            style={s.input}
            type="number"
            placeholder="Random"
            value={settings.seed ?? ""}
            onChange={(e) =>
              update("seed", e.target.value ? parseInt(e.target.value) : null)
            }
          />
        </div>

        {/* Stream Toggle */}
        <div style={s.toggle}>
          <span style={{ fontSize: "var(--text-sm, 14px)" }}>
            Stream Response
          </span>
          <button
            type="button"
            style={{
              ...s.switchBtn,
              background: settings.stream
                ? "var(--color-brand, #4318ff)"
                : "var(--bg-tertiary, #cbd5e1)",
            }}
            onClick={() => update("stream", !settings.stream)}
            role="switch"
            aria-checked={settings.stream}
          >
            <span
              style={{
                ...s.switchKnob,
                left: settings.stream ? "22px" : "2px",
              }}
            />
          </button>
        </div>
      </div>
    </div>
  );
}

export default ChatSettingsPanel;
