/**
 * Mobile Navigation
 *
 * Full-screen mobile navigation overlay with slide-in animation.
 *
 * @source taxonomy (shadcn official)
 * @router Adapt Link component for your router
 * @i18n Replace nav item titles with t() calls
 *
 * @example
 * <MobileNav items={navItems} siteName="My App" onClose={() => setOpen(false)} />
 */
import * as React from 'react'
import { Link } from 'react-router-dom' // Change to your router
import { cn } from '{{alias}}/lib/utils'
import type { NavItem } from './main-nav'

interface MobileNavProps {
  items: NavItem[]
  siteName?: string
  children?: React.ReactNode
  onClose?: () => void
}

export function MobileNav({
  items,
  siteName = 'App Name',
  children,
  onClose,
}: MobileNavProps) {
  // Lock body scroll when mobile nav is open
  React.useEffect(() => {
    document.body.style.overflow = 'hidden'
    return () => {
      document.body.style.overflow = ''
    }
  }, [])

  return (
    <div
      className={cn(
        'fixed inset-0 top-16 z-50 grid h-[calc(100vh-4rem)] grid-flow-row auto-rows-max overflow-auto p-6 pb-32 shadow-md animate-in slide-in-from-bottom-80 md:hidden'
      )}
    >
      <div className="relative z-20 grid gap-6 rounded-md bg-popover p-4 text-popover-foreground shadow-md">
        <Link to="/" className="flex items-center space-x-2" onClick={onClose}>
          <div className="h-6 w-6 rounded-md bg-primary" />
          <span className="font-bold">{siteName}</span>
        </Link>

        <nav className="grid grid-flow-row auto-rows-max text-sm">
          {items.map((item, index) => (
            <Link
              key={index}
              to={item.disabled ? '#' : item.href}
              onClick={onClose}
              className={cn(
                'flex w-full items-center rounded-md p-2 text-sm font-medium hover:underline',
                item.disabled && 'cursor-not-allowed opacity-60'
              )}
            >
              {item.title}
            </Link>
          ))}
        </nav>

        {children}
      </div>
    </div>
  )
}

