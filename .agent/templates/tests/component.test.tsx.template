import { render, screen, fireEvent, waitFor } from '@testing-library/react';
import userEvent from '@testing-library/user-event';
import { vi, describe, it, expect, beforeEach } from 'vitest';

import { {{FeatureName}} } from '../{{FeatureName}}';

// Mock react-i18next
vi.mock('react-i18next', () => ({
  useTranslation: () => ({
    t: (key: string) => key,
    i18n: { language: 'en' },
  }),
}));

describe('{{FeatureName}}', () => {
  const mockOnSubmit = vi.fn();
  const mockOnCancel = vi.fn();

  const defaultProps = {
    onSubmit: mockOnSubmit,
    onCancel: mockOnCancel,
  };

  beforeEach(() => {
    vi.clearAllMocks();
  });

  it('should render the form', () => {
    render(<{{FeatureName}} {...defaultProps} />);

    expect(screen.getByLabelText('form.name')).toBeInTheDocument();
    expect(screen.getByLabelText('form.description')).toBeInTheDocument();
    expect(screen.getByRole('button', { name: 'common.save' })).toBeInTheDocument();
  });

  it('should render with initial data', () => {
    const initialData = {
      name: 'Test Name',
      description: 'Test Description',
    };

    render(<{{FeatureName}} {...defaultProps} initialData={initialData} />);

    expect(screen.getByLabelText('form.name')).toHaveValue('Test Name');
    expect(screen.getByLabelText('form.description')).toHaveValue('Test Description');
  });

  it('should call onSubmit with form data', async () => {
    const user = userEvent.setup();
    render(<{{FeatureName}} {...defaultProps} />);

    await user.type(screen.getByLabelText('form.name'), 'New Name');
    await user.type(screen.getByLabelText('form.description'), 'New Description');
    await user.click(screen.getByRole('button', { name: 'common.save' }));

    expect(mockOnSubmit).toHaveBeenCalledWith({
      name: 'New Name',
      description: 'New Description',
    });
  });

  it('should call onCancel when cancel button is clicked', async () => {
    const user = userEvent.setup();
    render(<{{FeatureName}} {...defaultProps} />);

    await user.click(screen.getByRole('button', { name: 'common.cancel' }));

    expect(mockOnCancel).toHaveBeenCalled();
  });

  it('should disable submit button when loading', () => {
    render(<{{FeatureName}} {...defaultProps} isLoading={true} />);

    expect(screen.getByRole('button', { name: 'common.saving' })).toBeDisabled();
  });

  it('should not render cancel button if onCancel is not provided', () => {
    render(<{{FeatureName}} onSubmit={mockOnSubmit} />);

    expect(screen.queryByRole('button', { name: 'common.cancel' })).not.toBeInTheDocument();
  });
});
