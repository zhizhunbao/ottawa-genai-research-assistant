{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Full Stack Dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Backend Dev",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "jinja": true,
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Launch Both",
      "configurations": [
        "Backend Dev",
        "Full Stack Dev"
      ],
      "stopAll": true
    }
  ]
}