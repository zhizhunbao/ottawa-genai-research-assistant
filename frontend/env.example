# API Strategy Configuration
# Options: 'mock' | 'real' | 'hybrid'
# mock: Use only mock data (fast, reliable for demo)
# real: Use only real API (production mode)
# hybrid: Try real API first, fallback to mock (development/staging)
REACT_APP_API_STRATEGY=hybrid

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_FALLBACK_TO_MOCK=true
REACT_APP_API_TIMEOUT=5000

# Features Toggle
REACT_APP_ENABLE_DEBUG=false
REACT_APP_SHOW_PROTOTYPE_BANNER=true

# Optional: Real API Keys (for production)
# REACT_APP_OPENAI_API_KEY=your_openai_key_here
# REACT_APP_AZURE_API_KEY=your_azure_key_here

# Mock Data Configuration (when API_STRATEGY=mock or hybrid fallback)
# Options: 'demo' | 'development' | 'testing' | 'showcase'
REACT_APP_MOCK_DATA_SET=demo
REACT_APP_MOCK_DELAY_MIN=200
REACT_APP_MOCK_DELAY_MAX=800
REACT_APP_MOCK_ERROR_RATE=0.05
REACT_APP_ENABLE_MOCK_LOGS=true

# Development vs Production
# Development: REACT_APP_API_STRATEGY=hybrid (recommended)
# Staging: REACT_APP_API_STRATEGY=hybrid 
# Production: REACT_APP_API_STRATEGY=real 